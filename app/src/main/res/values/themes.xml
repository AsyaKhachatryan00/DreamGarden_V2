<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DreamGarden" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/Green</item>
        <item name="colorPrimaryDark">@color/NewLight</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Theme.DreamGarden.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DreamGarden.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DreamGarden.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CollapsedAdapter" parent="TextAppearance.AppCompat.Medium">
        <item name="textSize">25sp</item>
        <item name="textColor">@color/white</item>
        <item name="textInputStyle">@id/normal</item>
        <item name="fontFamily">@font/arm</item>
    </style>

    <style name="ExpandedAdapter" parent="TextAppearance.AppCompat.Title">
        <item name="textColor">@color/white</item>
        <item name="textInputStyle">@id/normal</item>
        <item name="fontFamily">@font/arm</item>
    </style>

    <style name="RelativeLayout" parent="Theme.MaterialComponents.DayNight" >
        <item name="android:background">@color/LightGreen</item>
        <item name="colorPrimary">@color/Green</item>
        <item name="android:textColor">@color/DarkGreen</item>
    </style>

    <style name="textView" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/DarkGreen</item>
    </style>

    <style name="MyCardView" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/LightGreen</item>
        <item name="android:textColor">@color/DarkGreen</item>
        <item name="tint">@color/DarkGreen</item>
    </style>

    <style name="radio" parent="Theme.MaterialComponents.DayNight">
        <item name="buttonTint">@color/Green</item>
    </style>

    <style name="about" parent="Theme.MaterialComponents.DayNight">
        <item name="android:tint">@color/DarkGreen</item>
        <item name="android:textColor">@color/DarkGreen</item>
        <item name="android:background">@color/LightGreen</item>
    </style>

</resources>